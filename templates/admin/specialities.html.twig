{% extends 'admin/admin_base.html.twig' %}
{% block body %}
    <h3 class="section-title">
        Specialities list
    </h3>
    <p class="text-right">
        <button type="button" class="tn btn-secondary btn-lg active d-flex justify-content-center
                            align-content-between" onclick="location.href='{{ path('create_speciality') }}';">
            <span>New Speciality</span> <i class="material-icons mr-1">add_circle</i>
        </button>
    </p>
    <div class="table-responsive">
        <table class="table" id="myTable">
            <thead>
            <tr>
                <th scope="col"></th>
                <th scope="col">Description</th>
                <th scope="col">Status</th>
                <th scope="col">Action</th>
            </tr>
            </thead>
            <tbody>
            {% for speciality in specialities %}
                <tr>
                    <th scope="row" class="dark-primary-color">{{ speciality.name }}</th>
                    <td>{{ speciality.description }}</td>
                    <td>{{ speciality.specialityStatus }}</td>
                    <td>
                        <a class="nav-link " href="{{ path('edit_speciality',{'id':speciality.id}) }}">
                            <span class="material-icons">mode_edit</span>
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}