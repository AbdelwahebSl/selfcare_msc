{% extends 'admin/admin_base.html.twig' %}

{% block body %}
    <h3 class="section-title">
        Supports list
    </h3>
    <p class="text-right">
        <button type="button" class="tn btn-secondary btn-lg active d-flex justify-content-center
                            align-content-between" onclick="location.href='{{ path('create_workshop_support') }}';">
            <span>New Support</span> <i class="material-icons mr-1">add_circle</i>
        </button>
    </p>


    <div class="table-responsive">
        <table class="table" id="myTable">
            <thead>
            <tr>
                <th scope="col"></th>
                <th scope="col">Description</th>
                <th scope="col">Type</th>
                <th scope="col">Image</th>
                <th scope="col">Workshop</th>
                <th scope="col">Order</th>
                <th scope="col">Action</th>
            </tr>
            </thead>
            <tbody>
            {% for support in supports %}
                <tr>
                    <th scope="row" class="dark-primary-color">{{ support.name }}</th>
                    <td>{{ support.supportDescription }}</td>
                    <td>{{ support.supportType }}</td>
                    <td>
                        {% if support.imageName is not null %}
                            <div class="category flex mb-4">
                                <img src="{{ 'images/workshops/'~ support.imageName }}"
                                     alt="Image"
                                     class="category-icon">
                            </div>
                        {% endif %}
                    </td>
                    <td>{{ support.workshop }}</td>
                    <td>{{ support.supportOrder }}</td>
                    <td>
                        <a class="nav-link " href="{{ path('edit_workshop_support',{'id':support.id}) }}">
                            <span class="material-icons">mode_edit</span>
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}