{% extends 'admin/admin_base.html.twig' %}

{% block body %}
    <h3 class="section-title">
        Workshops list
    </h3>
    <p class="text-right">
        <button type="button" class="tn btn-secondary btn-lg active d-flex justify-content-center
                            align-content-between" onclick="location.href='{{ path('create_workshop') }}';">
            <span>New Workshop</span> <i class="material-icons mr-1">add_circle</i>
        </button>
    </p>
    <div class="table-responsive">
        <table class="table" id="myTable">
            <thead>
            <tr>
                <th scope="col"></th>
{#                <th scope="col">Speciality</th>#}
                <th scope="col">Theme</th>
                <th scope="col">Objectives</th>
                <th scope="col">Duration</th>
                <th scope="col">Image</th>
                <th scope="col">Price</th>
                <th scope="col">Order</th>
                <th scope="col">Epired At</th>
                <th scope="col">Action</th>
            </tr>
            </thead>
            <tbody>
            {% for workshop in workshops %}
                <tr>
                    <th scope="row" class="dark-primary-color">{{ workshop.name }}</th>
{#                    <td>{{ workshop.theme.speciality.name }}</td>#}
                    {% if workshop.theme %}
                        <td>{{ workshop.theme.name }}</td>
                    {% endif %}

                    <td>{{ workshop.objectiveCount }}</td>
                    <td>{{ workshop.workshopDuration }} {{ workshop.durationUnit }}</td>
                    <td>
                        <div class="category flex mb-4">
                            <img src="{{ 'images/workshops/'~ workshop.imageName }}"
                                 alt="Image"
                                 class="category-icon">
                        </div>
                    </td>
                    <td>{{ workshop.price }}</td>
                    <td>{{ workshop.workshopOrder }}</td>
                    <td>
                        {% if workshop.expirationDate %}
                            {% if workshop.expirationDate['expirationDate'] %}
                                Expired At {{ workshop.expirationDate['expirationDate'] }}
                            {% else %}
                                Expiration In {{ workshop.expirationDate['unitNumber'] }} - {{ workshop.expirationDate['unit'] }}
                            {% endif %}
                        {% endif %}
                    </td>
                    <td>
                        <a class="nav-link " href="{{ path('edit_workshop',{'id':workshop.id}) }}">
                            <span class="material-icons">mode_edit</span>
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}



