{% extends 'admin/admin_base.html.twig' %}

{% block body %}
    <h3 class="section-title">
        Workshops list
    </h3>
    <div>
        <div class="mb-3">
            <div class="total-price mb-3">
                <p class="h3 mb-3">Total : <span class="dark-primary-color">{{ total }} TND</span></p>
            </div>
            <div class="row">
                <div class="col-6 ">
                    <ul>
                        {% for workshopCart in workshopCarts %}
                            <li class="form-control">{{ workshopCart.workshop.name }}
                                price {{ workshopCart.workshop.price }}</li>
                        {% endfor %}
                    </ul>
                </div>
            </div>

        </div>
        <div class="mb-4">
            <h2 class="h3 mb-3">Approval file: </h2>

            <div class="row">
                <div class="col-sm-10">
                    <div class="form-group">
                        <div class="offset-2 col-sm-10">
                            <iframe src="{{ asset('images/paymentFile/'~cartFile.fileName) }}" name="iframe_b" style="border:none;"
                                    height="500px"
                                    width="100%"></iframe>
                        </div>
                    </div>
                </div>
            </div>
{#            <img src="{{ asset('images/paymentFile/'~cartFile.fileName) }}" class="img-fluid" alt="Responsive image">#}
        </div>

        <form action="{{ path('bank_transfer_complete_payment', {id: cartFile.id}) }}" method="post">
            <div class="row mb-3">
                <div class="col-6">
                    <div class="form-group">
                        <label for="exampleFormControlInput1" class="mb-2 h3">Comment</label>
                        <input type="text" class="form-control" name="comment" required
                               value="{{ cartFile.description }}" placeholder="comment" id="comment">
                    </div>
                </div>
                <div class="col-6">

                    <div class="text">
                        <label for="" class="mb-2 h3">Action</label>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" id="acceptRadio" name="action"
                                   value="accept" checked>
                            <label class="form-check-label" for="exampleRadios1">
                                Accept
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="action"
                                   value="refuse" id="refuseRadio">
                            <label class="form-check-label" for="exampleRadios2">
                                Refuse
                            </label>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col">
                    <div class="input-group">
                        <a href="{{ path('cart_list') }}" class="btn btn-dark d-block  form-btn">
                            Reset
                        </a>
                    </div>
                </div>
                <div class="col">
                    <div class="input-group">
                        <input type="submit" id="submitBtn" value="Submit" name="_submit"
                               class="btn d-block  form-btn sign-btn">
                    </div>
                </div>
            </div>

        </form>


    </div>
{% endblock %}

{% block javascript %}
<script
    src="https://code.jquery.com/jquery-3.6.0.slim.min.js"
    integrity="sha256-u7e5khyithlIdTpu22PHhENmPcRdFiHRjhAuHcs05RI="
    crossorigin="anonymous"></script>
<script>

    var status = {{ cartFile.getStatus() }};
    if ( status === '1'){
        $('#acceptRadio').attr('checked', true);
        $('#acceptRadio').attr('disabled','disabled');
        $('#refuseRadio').attr('disabled','disabled');
        $('#submitBtn').attr('disabled','disabled');
        $('#comment').attr('disabled','disabled');

    }
    if ( status === '2'){
        $('#refuseRadio').attr('checked', true);
        $('#acceptRadio').attr('disabled','disabled');
        $('#refuseRadio').attr('disabled','disabled');
         $('#submitBtn').attr('disabled','disabled');
        $('#comment').attr('disabled','disabled');

    }
</script>
{% endblock %}