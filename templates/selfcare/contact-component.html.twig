<section class="contact">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-xl-6 col-12">
                <form action="{{ path('selfcare_contact_component') }}" method="post"  class="contact__form form">
                    <h3 class="tag">Contact</h3>
                    <h2 class="title title--small mb-4">
                        CONTACT US FOR MORE INFORMATION
                    </h2>
                    <div class="form__group">
                        <input type="text" name="name" id="name" class="form__input" required />
                        <label for="name" class="form__label">Name</label>
                    </div>
                    <div class="form__group">
                        <input
                                type="email"
                                name="email"
                                id="email"
                                class="form__input"
                                required
                        />
                        <label for="email" class="form__label">Email</label>
                    </div>
                    <div class="form__group">
                        <input
                                type="text"
                                name="subject"
                                id="subject"
                                class="form__input"
                                required
                        />
                        <label for="subject" class="form__label">Subject</label>
                    </div>
                    <div class="form__group">
                <textarea
                        name="message"
                        id="message"
                        class="form__input"
                        required
                ></textarea>
                        <label for="message" class="form__label">Your message</label>
                    </div>
                    <div class="row">
                        <button
                                type="submit"
                                class="button--contained button--contained--withArrow w-auto"
                        >
                            Submit now
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>