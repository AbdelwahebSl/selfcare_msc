{% extends "base.html.twig" %}

{% block title %}{{ themeName | title }}{% endblock %}



{% block content %}
    <h2 class="section-title text-center mb-5 mt-5">{{ themeName | split(' ')[0] }}
        <span class="dark-primary-color">
            {% if themeName | split(' ')[1] is defined %}{{ themeName | split(' ')[1] }}{% endif %}
            {% if themeName | split(' ')[2] is defined %}{{ themeName | split(' ')[2] }}{% endif %}
            {% if themeName | split(' ')[3] is defined %}{{ themeName | split(' ')[3] }}{% endif %}
            {% if themeName | split(' ')[4] is defined %}{{ themeName | split(' ')[4] }}{% endif %}
            {% if themeName | split(' ')[5] is defined %}{{ themeName | split(' ')[5] }}{% endif %}
                </span>
    </h2>
    <section class="category-list">
        <div class="container">

            <p class="section-paragraph text-center">
                {{ themeDescription }}
            </p>
            <div class="row">
                {% for workshop in workshops %}
                    <div class="col-12 col-md-6 col-lg-4">
                        <a href="{{ path('workshop_show',{'id':workshop.id}) }}" class="card">
                            <div class="card-image">
                                <picture>
                                    <source srcset="{{ 'images/workshops/'~ workshop.imageName }}"
                                            media="(min-width: 768px)">
                                    <source srcset="{{ 'images/workshops/'~ workshop.imageName }}"
                                            media="(max-width: 768px)">
                                    <img src="{{ 'images/workshops/'~ workshop.imageName }}" alt="image"/>
                                </picture>
                            </div>
                            <div class="card-info">
                                <div class="card-info">
                                    <h3 class="card-title dark-primary-color ">{{ workshop.name }}</h3>
                                    <div class="card-text-icon">
                                        <span class="material-icons"> layers </span>
                                        <p>{{ workshop.objectiveCount }} Objectives</p>
                                    </div>
                                </div>
                            </div>
                            <hr>
                            <div class="card-action">
                                <div class="time">
                                    <div class="icon"><span class="material-icons"> schedule </span></div>
                                    <span>{{ workshop.workshopDuration }} {{ workshop.durationUnit }}</span>
                                </div>
                                <button class="card-button">
                                    <span class="material-icons"> arrow_forward </span>
                                </button>
                            </div>
                        </a>
                    </div>
                {% endfor %}

            </div>
        </div>
    </section>

    {% include 'selfcare/popular_workshops.html.twig' %}
{% endblock %}

{% block javaScript %}
    <script>
        $('.galleryFormation').slick({
            infinite: true,
            speed: 300,
            slidesToShow: 3,
            slidesToScroll: 1,
            autoplay: true,
            autoplaySpeed: 3000,
            arrows: true,
            prevArrow: '<span class="material-icons slick-prev"> chevron_left </span>',
            nextArrow: '<span class="material-icons slick-next"> chevron_right </span>',
            responsive: [
                {
                    breakpoint: 992,
                    settings: {

                        slidesToShow: 2,
                        slidesToScroll: 1,
                    }
                },
                {
                    breakpoint: 768,
                    settings: {
                        slidesToShow: 1,
                        slidesToScroll: 1
                    }
                },
            ]
        });
    </script>
{% endblock %}

