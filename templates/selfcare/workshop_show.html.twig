{% endblock %}

{% block javaScript %}
    <script>
        jQuery(document).ready(function ($) {


            add_to_Cart = {{ addToCart|json_encode() }};
            existe = {{ existe|json_encode() }};
            if (add_to_Cart) {

                $('.toast').addClass('show')
                setTimeout(() => {
                    $('.toast').removeClass('show')

                    var uri = window.location.toString();
                    if (uri.indexOf("?") > 0) {
                        var clean_uri = uri.substring(0, uri.indexOf("?"));
                        window.history.replaceState({}, document.title, clean_uri);
                    }

                }, 5000);
                // });
            }

            $(".recommanded").slick({
                infinite: true,
                slidesToShow: 3,
                slidesToScroll: 2,
                dots: true,
                arrows: false,
                responsive: [
                    {
                        breakpoint: 992,
                        settings: {
                            slidesToShow: 2,
                        },
                    },
                    {
                        breakpoint: 768,
                        settings: {
                            slidesToShow: 1,
                        },
                    },
                    {
                        breakpoint: 576,
                        settings: {
                            slidesToShow: 1,
                        },
                    },
                ],
            });

        });


        // $(function () {
