<script>
    jQuery(document).ready(function ($) {
        $('.showToast').click(() => {
            $('.toast').addClass('show')
            setTimeout(() => {
                $('.toast').removeClass('show')
            }, 5000)
        });

        $.ajax({
            method: "GET",
            //async: false,
            url: "{{ path('app_total_workshop') }}",
            data: {},
            contentType: "application/json",

            success: function (r) {
                //console.log(r);

                var total = r['total']
                if (total !== 0) {
                    $('#totalWorkShop').text(total);
                    $('#warpTotalShop').attr('hidden', false);
                }

            },
            error: function () {
                console.log('erorrr');
            }
        });

    });
</script>
