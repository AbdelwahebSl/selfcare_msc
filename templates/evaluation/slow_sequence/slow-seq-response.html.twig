                         <div class="formbold-form-btn-wrapper">


                             <div class="row">

                                 <div class="col">
                                     <a class="" href="{{ path('workshop_show_content',{'id':workshop.id}) }}"
                                        style="background-color:#FFFFFF;  color:  #69313a; font-size: 20px">
                                         <i class="fas fa-angle-left "></i>
                                         Back

                                     </a>
                                 </div>
                             </div>
                         </div>
                     </div>

                 </form>


             </div>
         </div>
     </div>


